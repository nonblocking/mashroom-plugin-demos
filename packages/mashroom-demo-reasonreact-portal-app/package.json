{
    "name": "mashroom-demo-reasonreact-portal-app",
    "version": "1.0.0",
    "description": "Simple ReasonML based app that integrates into the Portal",
    "private": true,
    "homepage": "https://www.mashroom-server.com",
    "license": "MIT",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "bsb -make-world && webpack --mode production",
        "start": "bsb -make-world -w -ws _ ",
        "clean": "bsb -clean-world",
        "server": "moduleserve --transform babel ./ --port 8000"
    },
    "repository": "git+https://github.com/nonblocking/mashroom.git",
    "author": "Milan Heimschild",
    "dependencies": {
        "bs-platform": "^9.0.2",
        "react": "^16.14.0",
        "react-dom": "^16.14.0",
        "reason-react": "0.10.1"
    },
    "devDependencies": {
        "babel-core": "^6.26.3",
        "moduleserve": "^0.9.1"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Mashroom Demo ReasonReact Portal App",
                "title": "Demo Reason React App",
                "type": "portal-app",
                "bootstrap": "startReasonReactDemoApp",
                "category": "Demo",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "restProxies": {},
                    "appConfig": {
                        "firstName": "Joey"
                    }
                }
            }
        ]
    }
}
